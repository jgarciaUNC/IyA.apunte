\begin{frame}

  \begin{alertblock}{Errores  br\'ujula magn\'etica}
    \begin{itemize}
    \item Variaci\'on
    \item Desviaci\'on
    \item Oscilaci\'on
    \end{itemize}
  \end{alertblock}

\end{frame}

